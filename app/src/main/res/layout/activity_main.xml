                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/botao_mesa_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary"
                    android:text="@string/botao_reservar_label"
                    android:textSize="17sp"
                    app:cornerRadius="0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/numero_mesa"
            android:hint="@string/numero_mesa_label"
            android:textSize="25sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/botao_liberar_mesa"
            android:text="@string/botao_liberar_mesa_label"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/tertiary"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/botao_salvar_operacao"
            android:text="@string/botao_salvar_operacao_label"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/tertiary"
            android:textSize="25sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/botao_reservar_todas"
            android:text="@string/botao_reservar_todas_label"
            app:cornerRadius="0dp"
            android:backgroundTint="@color/tertiary"
            android:textSize="25sp"/>
    </LinearLayout>

</LinearLayout>