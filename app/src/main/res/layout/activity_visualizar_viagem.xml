<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/begeclaro"
    android:orientation="vertical"
    tools:context=".VisualizarViagemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@color/begeclaro"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/listagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Seção Principal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verde"
                    android:padding="8dp"
                    android:text="@string/principal"
                    android:textColor="@color/begeclaro"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/origem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/origem_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/destino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/destino_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/duracao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/duraco_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/numero_viagens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/numero_de_viajantes_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/total_viagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/valor_total_da_viagem_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Seção Combustível -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verde"
                    android:padding="8dp"
                    android:text="@string/combustivel"
                    android:textColor="@color/begeclaro"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/distancia_estimada_em_km_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/media_litro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/media_de_km_por_litro_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/custo_litro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/custo_por_litro_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/total_veiculos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/total_de_veiculos_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/total_combustivel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/valor_total_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Seção Tarifa Aérea -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verde"
                    android:padding="8dp"
                    android:text="@string/tarifaAerea"
                    android:textColor="@color/begeclaro"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custo_pessoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/custo_por_pessoa_n_o_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aluguel_veiculo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/aluguel_do_ve_culo_n_o_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/total_tarifa_aerea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/valor_total_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Seção Refeições -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verde"
                    android:padding="8dp"
                    android:text="@string/refeicoes"
                    android:textColor="@color/begeclaro"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custo_refeicao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/custo_por_refei_o_n_o_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/refeicao_dia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/n_mero_de_refei_es_por_dia_n_o_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/total_refeicoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/valor_total_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />

            </LinearLayout>
            
            <!-- Seção Hospedagem -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verde"
                    android:padding="8dp"
                    android:text="@string/hospedagem"
                    android:textColor="@color/begeclaro"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custo_noite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/custo_m_dio_por_noite_n_o_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/total_noites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/total_de_noites_n_o_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/total_quartos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/total_de_quartos_n_o_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/total_hospedagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:hint="@string/valor_total_nao_informado"
                    android:textColor="@color/cinzae"
                    android:textSize="16sp" />
            </LinearLayout>
            
            <!-- Seção Custos Adicionais é adicionada pelo código java -->
        </LinearLayout>
    </ScrollView>

    <!-- Botões de Ação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/verde"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/voltar"
            android:layout_width="0dp"
            android:textSize="22sp"
            android:layout_height="match_parent"
            android:textColor="@color/begeclaro"
            android:layout_weight="1"
            android:background="@drawable/shape_botao"
            android:hint="@string/voltar" />
        
        <Button
            android:id="@+id/editar"
            android:layout_width="0dp"
            android:textSize="22sp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/begeclaro"
            android:layout_weight="1"
            android:background="@drawable/shape_botao"
            android:hint="@string/editar" />
    </LinearLayout>
</LinearLayout>